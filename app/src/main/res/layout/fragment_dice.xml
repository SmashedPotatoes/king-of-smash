        app:layout_constraintBottom_toTopOf="@+id/fragment_dice_btn_dice_6"
        app:layout_constraintStart_toStartOf="@+id/fragment_dice_btn_dice_6"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fragment_dice_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:gravity="center"
        android:text="Select the dice to keep, the others will be rerolled."
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/fragment_dice_btn_dice_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:textColor="#000000"
        tools:visibility="visible" />

