<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CharacterSelectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        app:tint="#ABFFFFFF" />

    <Button
        android:id="@+id/button_navigate_to_main_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D63DBF89"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/play"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLucas"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/king_of_smash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/character_select_subtitle"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <View
            android:id="@+id/viewLucas"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_shape"
            app:layout_constraintEnd_toStartOf="@+id/viewRoy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <View
        android:id="@+id/viewCorrin"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewKingDDD"
        app:layout_constraintTop_toTopOf="@+id/viewKingDDD" />

    <View
        android:id="@+id/viewKingDDD"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintEnd_toStartOf="@+id/viewCorrin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewRoy"
        app:layout_constraintTop_toTopOf="@+id/viewRoy" />

    <View
        android:id="@+id/viewRoy"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintEnd_toStartOf="@+id/viewKingDDD"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewLucas"
        app:layout_constraintTop_toTopOf="@+id/viewLucas" />

    <ImageView
        android:id="@+id/imageViewLucas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/icon_lucas"
        app:layout_constraintBottom_toBottomOf="@+id/viewLucas"
        app:layout_constraintEnd_toEndOf="@+id/viewLucas"
        app:layout_constraintStart_toStartOf="@+id/viewLucas"
        app:layout_constraintTop_toTopOf="@+id/viewLucas" />

    <ImageView
        android:id="@+id/imageViewRoy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/icon_roy"
        app:layout_constraintBottom_toBottomOf="@+id/viewRoy"
        app:layout_constraintEnd_toEndOf="@+id/viewRoy"
        app:layout_constraintStart_toStartOf="@+id/viewRoy"
        app:layout_constraintTop_toTopOf="@+id/viewRoy"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageViewKingDDD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/icon_kingddd"
        app:layout_constraintBottom_toBottomOf="@+id/viewKingDDD"
        app:layout_constraintEnd_toEndOf="@+id/viewKingDDD"
        app:layout_constraintStart_toStartOf="@+id/viewKingDDD"
        app:layout_constraintTop_toTopOf="@+id/viewKingDDD" />

    <ImageView
        android:id="@+id/imageViewCorrin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/icon_corrin"
        app:layout_constraintBottom_toBottomOf="@+id/viewCorrin"
        app:layout_constraintEnd_toEndOf="@+id/viewCorrin"
        app:layout_constraintStart_toStartOf="@+id/viewCorrin"
        app:layout_constraintTop_toTopOf="@+id/viewCorrin" />

</androidx.constraintlayout.widget.ConstraintLayout>